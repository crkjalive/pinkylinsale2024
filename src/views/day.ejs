<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="shortcut icon" href="/ico/ico.ico" type="image/x-icon">
  <link rel="stylesheet" href="/css/main.css" />
  <link rel="shortcut icon" href="/ico/ico.ico" type="image/x-icon">
  <title>🏈 Total por día</title>
</head>
<body>
  <header id="header_container" class="header_container"></header>
  <h1 class="title_web">🏈 Totales por día</h1>

  <section>
    <div class="contenedor_day">
      <%let dato = 0;%>
      <% data.map( (data) => { %>
        <div class="registroDay">
          <div class="fecha"><%= data.registered.toLocaleDateString('en-us', { weekday:"short", year:"numeric", month:"short", day:"numeric"}) %></div>
          <div class="prendas">
            <span><%= data.prendas == 0 ? data.description+' ' : 'STOCK SOLD ' %></span>
            <%= data.prendas != 0 ? data.prendas : '' %></div>
          <div class="valorColor totalVenta"><%= data.total %></div>
        </div>

      <% }) %>
    </div>

  </section>

  <footer class="footer_container" id="footer_container"></footer> 
  <script src="/js/formulaColor.js"></script>
  <script src="/js/index.js"></script>
  <script src="/js/aNumeros.js"></script>
</body>
</html>